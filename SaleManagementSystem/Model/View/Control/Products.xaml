<UserControl x:Class="SaleManagementSystem.Model.View.Control.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaleManagementSystem.Model.View.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid x:Name="Product_Form" Loaded="Product_Form_Loaded">
        <DataGrid x:Name="dg_Product" HorizontalAlignment="Left" Height="172" Margin="46,206,0,0" VerticalAlignment="Top" Width="729" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label Content="ProductID" HorizontalAlignment="Left" Height="29" Margin="34,21,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox x:Name="txt_ProductID" HorizontalAlignment="Left" Height="18" Margin="129,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" IsEnabled="False"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Margin="38,77,0,0" VerticalAlignment="Top"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="43,123,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_ProductName" HorizontalAlignment="Left" Margin="129,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99"/>
        <Button Content="Thêm" HorizontalAlignment="Left" Margin="46,170,0,0" VerticalAlignment="Top" Width="85"/>
        <Button Content="Sửa" HorizontalAlignment="Left" Margin="241,170,0,0" VerticalAlignment="Top" Width="101"/>
        <Button Content="Xóa" HorizontalAlignment="Left" Margin="425,170,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBox x:Name="txt_price" HorizontalAlignment="Left" Margin="129,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99"/>
        <Label Content="Stock" HorizontalAlignment="Left" Margin="351,19,0,0" VerticalAlignment="Top" Width="95"/>
        <TextBox x:Name="txt_stock" HorizontalAlignment="Left" Margin="451,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.IsRowHeader="True"/>
        <Label Content="Category Name" HorizontalAlignment="Left" Margin="353,77,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbb_CategoryName" HorizontalAlignment="Left" Margin="451,81,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.667,0.546"/>
    </Grid>
</UserControl>
